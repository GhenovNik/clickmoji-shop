# Database
DATABASE_URL="postgresql://user:password@localhost:5432/clickmoji_shop?schema=public"

# Auth.js / NextAuth
AUTH_URL="http://localhost:3000"
AUTH_SECRET="your-secret-key-here"
# Optional: true = always require email verification, false = never require it.
# If unset, verification is required only when RESEND is configured.
AUTH_REQUIRE_EMAIL_VERIFICATION=""
# Backward-compatible aliases (optional)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Google OAuth
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Resend (email verification)
RESEND_API_KEY=""
RESEND_FROM_EMAIL=""

# UploadThing (for custom emoji images and user avatars)
# Get your keys from https://uploadthing.com/dashboard
UPLOADTHING_TOKEN=""

# AI Image Generation (optional)
# Choose provider: "gemini" or "gpt-image"
AI_PROVIDER="gemini"

# Gemini Imagen (https://aistudio.google.com/app/apikey)
GOOGLE_GENAI_API_KEY=""

# Imagen model options:
# - imagen-4.0-generate-001 (default, higher quality, higher quota usage)
# - imagen-4.0-fast-generate-001 (faster, cheaper, lower quota usage)
IMAGEN_MODEL="imagen-4.0-fast-generate-001"

# OpenAI GPT Image (https://platform.openai.com/api-keys)
OPENAI_API_KEY=""
