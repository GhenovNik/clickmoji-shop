{
  "name": "clickmoji-shop",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "postinstall": "prisma generate",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "migrate-data": "tsx scripts/db-transfer.ts migrate-data",
    "cleanup-files": "tsx scripts/db-files.ts cleanup-orphaned-files",
    "cleanup-images": "tsx scripts/db-files.ts cleanup-unused-images",
    "cleanup-images:dry": "tsx scripts/db-files.ts cleanup-unused-images --dry-run",
    "check-duplicates": "tsx scripts/db-lists.ts check-duplicates",
    "remove-duplicates": "tsx scripts/db-lists.ts remove-duplicate-items",
    "create-admin": "tsx scripts/db-users.ts create-admin",
    "create-test-user": "tsx scripts/db-users.ts create-test-user",
    "verify-users": "tsx scripts/db-users.ts verify-users",
    "reassign-products": "tsx scripts/db-products.ts reassign",
    "quality": "npm run typecheck && npm run lint && npm run format:check",
    "check": "npm run lint && npm run typecheck && npm run test:run",
    "ci": "npm run check && npm run build && npm run test:e2e",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@google/genai": "^1.41.0",
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "@tanstack/react-query": "^5.90.21",
    "@tanstack/react-query-devtools": "^5.91.3",
    "@uploadthing/react": "^7.3.3",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "emojibase": "^17.0.0",
    "emojibase-data": "^17.0.0",
    "fuse.js": "^7.1.0",
    "lucide-react": "^0.564.0",
    "next": "^16.1.6",
    "next-auth": "^4.24.13",
    "openai": "^6.22.0",
    "pg": "^8.18.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "resend": "^6.9.2",
    "tailwind-merge": "^3.4.1",
    "uploadthing": "^7.7.4",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.1.6",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.24",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prisma": "^7.4.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
