{
  "name": "clickmoji-shop",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "migrate-data": "tsx scripts/db-transfer.ts migrate-data",
    "cleanup-files": "tsx scripts/db-files.ts cleanup-orphaned-files",
    "cleanup-images": "tsx scripts/db-files.ts cleanup-unused-images",
    "cleanup-images:dry": "tsx scripts/db-files.ts cleanup-unused-images --dry-run",
    "check-duplicates": "tsx scripts/db-lists.ts check-duplicates",
    "remove-duplicates": "tsx scripts/db-lists.ts remove-duplicate-items",
    "create-admin": "tsx scripts/db-users.ts create-admin",
    "create-test-user": "tsx scripts/db-users.ts create-test-user",
    "verify-users": "tsx scripts/db-users.ts verify-users",
    "reassign-products": "tsx scripts/db-products.ts reassign",
    "quality": "npm run typecheck && npm run lint && npm run format:check",
    "check": "npm run lint && npm run typecheck && npm run test:run",
    "ci": "npm run check && npm run build && npm run test:e2e",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@google/genai": "^1.31.0",
    "@prisma/client": "^6.17.1",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-query-devtools": "^5.91.1",
    "@uploadthing/react": "^7.3.3",
    "bcryptjs": "^3.0.3",
    "emojibase": "^17.0.0",
    "emojibase-data": "^17.0.0",
    "fuse.js": "^7.1.0",
    "next": "16.0.10",
    "next-auth": "^5.0.0-beta.30",
    "openai": "^6.10.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "resend": "^4.0.0",
    "uploadthing": "^7.7.4",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.17",
    "eslint": "^9",
    "eslint-config-next": "^15.5.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.35",
    "prettier": "^3.7.4",
    "prisma": "^6.17.1",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "vitest": "^4.0.16"
  }
}
